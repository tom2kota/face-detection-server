FROM node:12.18.2

# Create app directory
RUN mkdir -p /usr/src/face-detection-api
WORKDIR /usr/src/face-detection-api

# Install app dependencies
COPY package.json /usr/src/face-detection-api
RUN npm install

# Bundle app source
COPY . /usr/src/face-detection-api

# Build arguments
ARG NODE_VERSION=12.18.2

# Environment
ENV NODE_VERSION $NODE_VERSION